@model SymaCord.TryOnMirror.UI.Web.ViewModels.LocalPasswordModel
@{
    ViewBag.Title = "Manage Account";
}

<div class="title">
    <h1 class="title float-left">@ViewBag.Title</h1>
    
    @Html.Partial("PartialUserNav")
</div>

<div style="width: 45%; margin-right: 25px; border-right:1px solid #ccc;" class="float-left">
    <p class="message-success">@ViewBag.StatusMessage</p>

    <p>You're logged in as <strong>@User.Identity.Name</strong>.</p>

    @if (ViewBag.HasLocalPassword)
    {
        @Html.Partial("_ChangePasswordPartial")
    }
    else
    { 
        @Html.Partial("_SetPasswordPartial")
    }

</div>

<section id="externalLogins" class="float-left" style="width: 40%;">
    @Html.Action("RemoveExternalLogins")

    <h3>Add an external login</h3>
    @Html.Action("ExternalLoginsList", new { ReturnUrl = ViewBag.ReturnUrl })
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
