@model SymaCord.TryOnMirror.UI.Web.ViewModels.LocalPasswordModel

<h3>Change password</h3>

@using(Html.BeginForm("Manage", "Account", FormMethod.Post, 
    htmlAttributes: new{@class="form-horizontal"}))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <div class="control-group">
        @Html.LabelFor(x => x.OldPassword, new {@class = "control-label"})
        <div class="controls">
            @Html.PasswordFor(x => x.OldPassword, new {placeholder = "Old password"})
        </div>
    </div>

    <div class="control-group">
        @Html.LabelFor(x => x.NewPassword, new {@class = "control-label"})
        <div class="controls">
            @Html.PasswordFor(x => x.NewPassword, new {placeholder = "New password"})
        </div>
    </div>

    <div class="control-group">
        @Html.LabelFor(x => x.ConfirmPassword, new {@class = "control-label"})
        <div class="controls">
            @Html.PasswordFor(x => x.ConfirmPassword, new {placeholder = "Confirm password"})
        </div>
    </div>

    <div class="control-group">
        <div class="controls">
            <button type="submit" class="btn">Change password</button>
        </div>
    </div>
}