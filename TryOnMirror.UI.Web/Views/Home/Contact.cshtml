@model SymaCord.TryOnMirror.UI.Web.ViewModels.ContactModel

@{
    ViewBag.Title = "Contact";
}

@section scripts{
    @Scripts.Render("~/assets/scripts/jqueryval")
}

<div class="title-wrapper">
    <div class="container">
        <h1>Contacts</h1>        
    </div>
</div>

<div class="container" id="contacts">
    <div class="row">
        <div class="col-sm-6">
            <h1>Get in touch with us</h1>
            <p>
                For licensing, support, suggestions, feedback, and any other inquiry.
            </p>

            <ul class="contact-means">
                <li><a href="#"><i class="glyphicon glyphicon-phone-alt"></i> +234-803-7808-732, 803-7380-597</a></li>
                <li><a href="mailto:info@tryonmirror.com"><i class="glyphicon glyphicon-envelope"></i> 
                        info@tryonmirror.com</a></li>
            </ul>
            
            <p><a href="https://www.facebook.com/tryonmirror" target="_blank" class="btn btn-facebook">
                   <i class="icon-facebook"></i>&nbsp; Like us on facebook &nbsp;
               </a></p>
            <p><a href="https://www.twitter.com/tryonmirror" class="btn btn-twitter" target="_blank">
                   <i class="icon-twitter"></i>&nbsp; Follow us on twitter
               </a></p>
        </div>
        
        <div class="col-sm-6">
            <div class="row">
                <div class="col-sm-12">
                    <div class="col-sm-12">
                        @if(TempData["Message"] != null)
                        {
                            <div class="alert alert-success">
                                @TempData["Message"]
                            </div>
                        }
                    </div>
                </div>
                
                <div class="col-sm-12">
                    @using(Html.BeginForm("contact","home",FormMethod.Post, new{role="form"}))
                    {
                        <div class="form-group">
                            @Html.LabelFor(x=>x.Name)
                            @Html.TextBoxFor(x=>x.Name,new{@class="form-control", placeholder="Your full name"})
                            @Html.ValidationMessageFor(x=>x.Name)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(x=>x.Email)
                            @Html.TextBoxFor(x=>x.Email,new{type="email", @class="form-control", placeholder="Email"})
                            @Html.ValidationMessageFor(x=>x.Email)
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(x=>x.Message)
                            @Html.TextAreaFor(x=>x.Message,new{@class="form-control", row="3", placeholder="Your message"})
                            @Html.ValidationMessageFor(x=>x.Message)
                            @*<p class="help-block">Example block-level help text here.</p>*@
                        </div>

                        <button type="submit" class="btn btn-default">Submit</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>