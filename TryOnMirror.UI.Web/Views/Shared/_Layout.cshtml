<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        @*<link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />*@
        <meta name="viewport" content="width=device-width" />
        
        @Styles.Render("~/assets/css/main")
        @RenderSection("styles", required:false)
        @Scripts.Render("~/assets/scripts/modernizr")
    </head>
    <body>
        <header class="navbar navbar-inverse navbar-fixed-top">
            @Html.Partial("PartialHeader")
        </header>

        @RenderBody()

        @if(IsSectionDefined("footer"))
        {
            @RenderSection("footer")
        }else
        {
           @Html.Partial("PartialFooter")
        }
        
        <div class="modal fade" id="busyModal" tabindex="-1" role="dialog" aria-labelledby="busyModalLabel" aria-hidden="true"
              data-backdrop="static" data-keyboard="false">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" id="busyModalLabel">Processing, please wait, this might take a while&hellip;</h4>
                    </div>

                    <div class="modal-body" style="text-align: center;">
                        <img src="@Url.Content("~/assets/images/ajax-loader.gif")" alt="loading..."/>
                    </div>

                </div>
            </div>
        </div>


        @Scripts.Render("~/assets/scripts/main")
        @RenderSection("scripts", required: false)
        @Scripts.Render("~/assets/scripts/site-js")
        
        <script type="text/javascript">
            $(document).on('click', '.yamm .dropdown-menu', function (e) {
                e.stopPropagation();
            });
        </script>
    </body>
</html>
